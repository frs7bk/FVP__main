# إعدادات قاعدة البيانات
DATABASE_URL=postgresql://user:password@localhost/crm_db

# إعدادات البريد الإلكتروني
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@yourdomain.com

# إعدادات التكامل مع CRM
HUBSPOT_API_KEY=your_hubspot_api_key
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token

# إعدادات الإشعارات
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# إعدادات التتبع
FOLLOW_UP_DAYS=3,7,14,30  # أيام المتابعة بعد آخر اتصال
MAX_FOLLOW_UPS=5  # الحد الأقصى لعدد مرات المتابعة

# إعدادات التقارير
REPORT_EMAIL=reports@yourdomain.com
REPORT_FREQUENCY=daily  # daily, weekly, monthly
